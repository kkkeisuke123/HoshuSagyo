@model HoshuSagyo.Models.InputModels.SagyoKeikakuGamen
@{
    ViewData["Title"] = "作業計画削除画面";
}

<div class="text-center">
    <h1 class="display-6">作業計画削除画面</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-controller="SagyoKeikaku" asp-action="DoDelete" method="post">
        <partial name="_SagyokeikakuPartial" model="Model">
        <div class="row justify-content-center">
            <div class="col">
                <input type="submit" class="btn btn-success" value="削除"/>
                <a class="btn btn-outline-success" asp-controller="SagyoIchiran" asp-action="Index">戻る</a>
            </div>
        </div>
    </form>
</div>
<script>
    // 編集不可の状態にする
    document.querySelectorAll("form input").forEach(e => {
        if (e.type !== "hidden" && e.type !== "submit") {
            e.disabled = true;
        }
    });
    document.querySelectorAll("form select").forEach(e => e.disabled = true);
    document.querySelectorAll("form textarea").forEach(e => e.disabled = true);
</script>