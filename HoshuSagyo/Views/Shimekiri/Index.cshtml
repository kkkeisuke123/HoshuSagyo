@model HoshuSagyo.Models.InputModels.ShimekiriGamen
@{
    ViewData["Title"] = "締切画面";
}

<div class="text-center">
    <h1 class="display-6">締切画面</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-controller="Shimekiri" asp-action="DoShimekiri" method="post">
        <div class="container p-3 w-25">
            <div class="form-floating">
                <input asp-for="@Model.OldShimekiriZumiBi" class="form-control" value="@Model.OldShimekiriZumiBi.ToString("yyyy-MM-dd")" disabled="disabled" />
                <label asp-for="@Model.OldShimekiriZumiBi"></label>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.NewShimekiriZumiBi" class="form-control" value="@Model.NewShimekiriZumiBi.ToString("yyyy-MM-dd")" />
                <label asp-for="@Model.NewShimekiriZumiBi"></label>
            </div>
        </div>
        <input type="submit" class="btn btn-success" value="締切"/>
        <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">戻る</a>
    </form>
</div>
