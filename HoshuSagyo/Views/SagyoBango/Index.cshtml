@model HoshuSagyo.Models.InputModels.SagyoBangoGamen
@{
    ViewData["Title"] = "作業番号付与画面";
}

<div class="text-center">
    <h1 class="display-6">作業番号付与画面</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <form asp-controller="SagyoBango" asp-action="DoSagyoBangoFuyo" method="post">
        <div class="container p-3">
            <div class="row justify-content-center">
                <div class="col-3">
                    <div class="form-floating">
                        <input asp-for="@Model.SagyoBiFrom" class="form-control" value="" />
                        <label asp-for="@Model.SagyoBiFrom"></label>
                    </div>
                </div>
                <div class="col-auto mt-3">
                    <span>～</span>
                </div>
                <div class="col-3">
                    <div class="form-floating">
                        <input asp-for="@Model.SagyoBiTo" class="form-control" value="" />
                        <label asp-for="@Model.SagyoBiTo"></label>
                    </div>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-success" value="作業番号付与"/>
        <a class="btn btn-outline-success" asp-controller="Home" asp-action="Index">戻る</a>
    </form>
</div>
